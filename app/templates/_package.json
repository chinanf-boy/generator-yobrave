{
	"name": "<%= moduleName %>",
	"version": "0.0.0",
	"description": "<%= moduleDescription %>",
	"license": "MIT",
	"repository": "<%= githubUsername %>/<%= repoName %>",
	"author": {
		"name": "<%= name %>",
		"email": "<%= email %>",
		"url": "<%= humanizedWebsite %>"
	},<% if (cli) { %>
	"bin": "cli.js",<% } %>
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"test": "<% if (nyc) { %>nyc <% } %>ava -v -s",
		"precommit": "lint-staged",
		"npmUp": "npm version patch && npm publish",
		"git": "git push && git push --tags",
		"pub" : "npm run test && npm run npmUp && npm run git"
	},
	"lint-staged": {
		"*.{js,json,css,md}": [
			"prettier --single-quote --trailing-comma es5 --write",
			 "git add"
			]
	  },
	"files": [
		"index.js"<% if (cli) { %>,
		"cli.js"<% } %>
	],
	"keywords": [<% if (cli) { %>
		"cli-app",
		"cli",<% } %>
		""
	],
	"dependencies":{
		<% if (cli) { %>
		"meow": "^3.7.0",
			<% } %>
		"validate-switch": "^0.0.2",
		"weoptions": "^0.0.4"

	},
	"devDependencies": {
		"lint-staged": "^7.0.0",
		"husky": "^0.14.3",
		"prettier": "^1.12.1",
		"ava": "^0.25.0",<% if (codecov) { %>
		"codecov": "^3.0.2",<% } %><% if (nyc) { %>
		"nyc": "^11.8.0"<% } %>
	}<% if (codecov) { %>,
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	}<% } %>
}
