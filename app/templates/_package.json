{
	"name": "<%= moduleName %>",
	"version": "0.0.0",
	"description": "<%= moduleDescription %>",
	"license": "MIT",<% if (build) { %>
	"main":"dist/<%= moduleName %>.js",
	"module":"dist/<%= moduleName %>.m.js",<% } %><% if (!build){ %>
	"main":"<%= moduleName %>.js",	<% } %>
	"repository": "<%= githubUsername %>/<%= repoName %>",
	"author": {
		"name": "<%= name %>",
		"email": "<%= email %>",
		"url": "http://<%= humanizedWebsite %>"
	},<% if (cli) { %>
	"bin": "cli.js",<% } %>
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"test": "xo --fix --open && <% if (build) { %>npm run build && <% } %><% if (nyc) { %>nyc <% } %>ava",<% if (build) { %>
		"build": "microbundle build <%= moduleName %>.js",<% } %>
		"precommit": "lint-staged",
		"pub" : "npm run test && npm run npmUp && npm run git",
		"npmUp": "npm version patch && npm publish",
		"git": "git push && git push --tags"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"size-limit": [
		{
		  "path": "dist/<%= moduleName %>.js",
		  "gzip": false
		}
	 ],
	"lint-staged": {
		"linters":{
			"*.{js,json,md}": [
				"prettier --single-quote --trailing-comma es5 --write",
				 "git add"
				]
		},
		"ignore":["**/dist/*.js"]
	  },
	"files": [<% if (cli) { %>
		"cli.js",<% } %>
		"src",
		"lib"
	],
	"keywords": [<% if (cli) { %>
		"cli-app",
		"cli",<% } %>
		""
	],
	"dependencies":{
		<% if (cli) { %>
		"commander": "*",
		"weoptions": "*",
		"two-log-min": "*",<% } %>
		"yobrave-util": "*"
	},
	"devDependencies": {
		<% if (codecov) { %>
		"codecov": "^3.0.2",<% } %><% if (nyc) { %>
		"nyc": "^11.8.0",<% } %>
		"lint-staged": "^7.0.0",
		"prettier": "*",<% if (build) { %>
		"microbundle": "^0.4.4",<% } %>
		"husky": "1.0.0-rc.13",
		"ava": "^0.25.0",
		"xo"
	}<% if (codecov) { %>,
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	}<% } %>
}
