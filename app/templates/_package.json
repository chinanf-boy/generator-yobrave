{
	"name": "<%= moduleName %>",
	"version": "0.0.0",
	"description": "<%= moduleDescription %>",
	"license": "MIT",<% if (build) { %>
	"main":"dist/<%= moduleName %>.js",
	"module":"dist/<%= moduleName %>.m.js",<% } %><% else{ %>
	"main":"index.js",	<% } %>
	"repository": "<%= githubUsername %>/<%= repoName %>",
	"author": {
		"name": "<%= name %>",
		"email": "<%= email %>",
		"url": "<%= humanizedWebsite %>"
	},<% if (cli) { %>
	"bin": "cli.js",<% } %>
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"test": "<% if (nyc) { %>nyc <% } %>ava -v",<% if (build) { %>
		"dev": "microbundle watch",
		"prepublish": "npm run build",
		"build": "microbundle",<% } %>
		"precommit": "lint-staged",
		"pub" : "npm run test && npm run npmUp && npm run git",
		"npmUp": "npm version patch && npm publish",
		"git": "git push && git push --tags"
	},
	"size-limit": [
		{
		  "path": "dist/<%= moduleName %>.js",
		  "gzip": false
		}
	 ],
	"lint-staged": {
		"*.{js,json,css,md}": [
			"prettier --single-quote --trailing-comma es5 --write",
			 "git add"
			]
	  },
	"files": [<% if (cli) { %>
		"cli.js"<% } %>
	],
	"keywords": [<% if (cli) { %>
		"cli-app",
		"cli",<% } %>
		""
	],
	"dependencies":{
		<% if (cli) { %>
		"meow": "^5.0.0",
		"weoptions": "^0.0.11",
		"two-log": "^0.0.9"<% } %>
	},
	"devDependencies": {
		<% if (codecov) { %>
		"codecov": "^3.0.2",<% } %><% if (nyc) { %>
		"nyc": "^11.8.0",<% } %>
		"lint-staged": "^7.0.0",<% if (build) { %>
		"microbundle": "^0.4.4",<% } %>
		"prettier": "^1.12.1",
		"ava": "^0.25.0"
	}<% if (codecov) { %>,
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	}<% } %>
}
